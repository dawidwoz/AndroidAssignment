<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_start">

    <fragment
        android:id="@+id/navigation_start"
        android:name="uk.ac.aber.dcs.cs31620.assignment.ui.start.StartFragment"
        android:label="@string/menu_start"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_start_to_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="uk.ac.aber.dcs.cs31620.assignment.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_start_to_add"
            app:destination="@id/navigation_add"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_list"
        android:name="uk.ac.aber.dcs.cs31620.assignment.ui.list.ListFragment"
        android:label="@string/menu_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_list_to_add"
            app:destination="@id/navigation_add"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_list_to_edit"
            app:destination="@id/navigation_edit"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="originalWord"
                app:argType="string"
                android:defaultValue="" />
            <argument
                android:name="translationWord"
                app:argType="string"
                android:defaultValue="" />
            <argument
                android:name="idWord"
                app:argType="string"
                android:defaultValue="" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_learn"
        android:name="uk.ac.aber.dcs.cs31620.assignment.ui.learn.LearnFragment"
        android:label="@string/menu_learn"
        tools:layout="@layout/fragment_learn">
    </fragment>

    <fragment
        android:id="@+id/navigation_add"
        android:name="uk.ac.aber.dcs.cs31620.assignment.ui.add.AddFragment"
        android:label="@string/menu_add"
        tools:layout="@layout/fragment_learn" />

    <fragment
        android:id="@+id/navigation_edit"
        android:name="uk.ac.aber.dcs.cs31620.assignment.ui.edit.EditFragment"
        android:label="@string/menu_edit"
        tools:layout="@layout/fragment_edit">
        <argument
            android:name="originalWord"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="translationWord"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="idWord"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/navigation_test"
        android:name="uk.ac.aber.dcs.cs31620.assignment.ui.test.TestFragment"
        android:label="@string/menu_test"
        tools:layout="@layout/fragment_test" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="uk.ac.aber.dcs.cs31620.assignment.ui.settings.SettingsFragment"
        android:label="@string/menu_setting"
        tools:layout="@layout/fragment_settings" />
</navigation>
